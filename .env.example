# 数据库配置
# 源数据库
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=3306
SOURCE_DB_USER=root
SOURCE_DB_PASSWORD=your_password
SOURCE_DB_NAME=source_db

# 目标数据库
TARGET_DB_HOST=localhost
TARGET_DB_PORT=3306
TARGET_DB_USER=root
TARGET_DB_PASSWORD=your_password
TARGET_DB_NAME=target_db

# 结果存储数据库
RESULT_DB_HOST=localhost
RESULT_DB_PORT=3306
RESULT_DB_USER=root
RESULT_DB_PASSWORD=your_password
RESULT_DB_NAME=dbcapture

# 应用配置
APP_NAME=DBCapture
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
API_PREFIX=/api/v1

# 企业微信机器人配置
WECHAT_WEBHOOK_KEY=your-webhook-key
WECHAT_ALERT_ENABLED=true

# 定时任务配置
SCHEDULER_ENABLED=true
DEFAULT_COMPARISON_CRON="0 0 * * *"  # 每天凌晨执行

# 报告配置
REPORT_OUTPUT_DIR=./reports
PDF_ENABLED=true
HTML_ENABLED=true 